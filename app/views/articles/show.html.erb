<h1 class="show-heading">Title: <%= @article.title%></h1>

<div class="well col-xs-8 col-xs-offset-2 alert alert-secondary">
  <h4 class="center"><strong>Description:</strong></h4>
  <p class="center"><%= @article.description%></p>
  <hr>
  <h6 class="center">Created by:</h6>
  <p class="center"><%= @article.user.username%></p>
  <small class="center">Created: <%=time_ago_in_words(@article.created_at)%> ago</small>
  <small class="center">Last updated: <%=time_ago_in_words(@article.updated_at)%> ago</small>
</div>

<div class="well col-xs-8 col-xs-offset-2 d-flex flex-column justify-content-center align-items-center">
