<h1>Create category</h1>

<% if @category.errors.any? %>
<div class="alert alert-danger text-center">
  <h2 class="error-msg-heading">The following errors prevented the category from getting created</h2>
    <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </ul>
</div>
<% end %>

<div class="row">
  <div class="col-xs-12 center">
    <%= form_for(@category, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Name', autofocus: true%>
        </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary btn-lg submitbtn'%>
      </div>
    <%end%>
  </div>
</div>
